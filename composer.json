{
  "name": "gemstracker/gems-oauth2",
  "description": "OAuth2 implementation for GemsTracker",
  "type": "library",
  "autoload": {
    "psr-4": {
      "Gems\\OAuth2\\": "src/"
    }
  },
  "require": {
    "php": ">=8.1",
    "ext-openssl": "*",
    "league/oauth2-server": "^8.3",
    "doctrine/orm": "^2.12",
    "laminas/laminas-diactoros": "^2.13",
    "laminas/laminas-servicemanager": "^3.14",
    "mezzio/mezzio-template": "^2.7",
    "mezzio/mezzio-flash": "^1.6",
    "psr/http-server-handler": "^1.0",
    "symfony/console": "^6.1",
    "symfony/filesystem": "^6.1"
  },
  "require-dev": {
    "gemstracker/gemstracker": "^2.0.26|2.x-dev",
    "phpunit/phpunit": "^9",
    "phpstan/phpstan": "^1.11",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan-doctrine": "^1.3"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/gemstracker/gems-api.git"
    },
    {
      "type": "git",
      "url": "https://github.com/gemstracker/gems-fhir-api.git"
    },
    {
      "type": "git",
      "url": "https://github.com/MagnaFacta/zalt-html.git"
    },
    {
      "type": "git",
      "url": "https://github.com/MagnaFacta/zalt-laminas-filter.git"
    },
    {
      "type": "git",
      "url": "https://github.com/MagnaFacta/zalt-laminas-validator.git"
    },
    {
      "type": "git",
      "url": "https://github.com/MagnaFacta/zalt-late.git"
    },
    {
      "type": "git",
      "url": "https://github.com/MagnaFacta/zalt-loader.git"
    },
    {
      "type": "git",
      "url": "https://github.com/MagnaFacta/zalt-model.git"
    },
    {
      "type": "git",
      "url": "https://github.com/MagnaFacta/zalt-util.git"
    }
  ],
   "scripts": {
        "stan": [
            "vendor/bin/phpstan --memory-limit=512M"
        ]
    }
 }
